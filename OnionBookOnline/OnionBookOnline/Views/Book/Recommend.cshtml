@model OnionBookOnline.Models.BookViewModel

<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-home"></i>图书</a></li>
            <li class="active">图书推荐</li>
        </ol>
    </div>
</div>
<!-- breadcrumb end -->
<!-- shop-area start -->
<div class="shop-area">
    <div class="container">
        <div class="row" style="display: flex;flex-direction: column;align-items: center;">
            <div class="col-md-9 col-sm-8">
                <h2 class="page-heading mt-40">
                    <span class="cat-name">图书推荐</span>
                    <span class="heading-counter">共 @Model.recBook.Count 个产品。</span>
                </h2>
                <div class="shop-page-bar">
                    <div>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="profile">
                                <div class="row">
                                    @for (int i = 0; i < 10; i++)
                                    {
                                        var item = Model.recBook[i];
                                        <div class="col-lg-12">
                                            <div class="single-product  shop-single-product mb-30 white-bg">
                                                <div class="product-img pt-20">
                                                    <a href="#"><img src="@item.PATH" style="width:306px; height:432px" /></a>
                                                </div>
                                                <div class="product-content">
                                                    <div class="pro-title">
                                                        <h4><a href="~/book/?id=@item.ID">@item.NAME</a></h4>
                                                    </div>
                                                    <div class="pro-rating mb-20">
                                                        <a href="#"><i class="fa fa-star"></i></a>
                                                        <a href="#"><i class="fa fa-star"></i></a>
                                                        <a href="#"><i class="fa fa-star"></i></a>
                                                        <a href="#"><i class="fa fa-star"></i></a>
                                                        <a href="#"><i class="fa fa-star-o"></i></a>
                                                    </div>
                                                    <p>@item.INTRODUCTION</p>
                                                    <div class="price-box">
                                                        <span class="price product-price">￥@item.PRICE</span>
                                                    </div>
                                                    <div class="product-icon">
                                                        <div class="product-icon-left f-left">
                                                            <a href="#"><i class="fa fa-shopping-cart"></i>加入购物车</a>
                                                        </div>
                                                        <div class="product-icon-right floatright">
                                                            <a href="#" data-toggle="tooltip" title="Wishlist"><i class="fa fa-heart"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="content-sortpagibar">
                                    <div class="product-count display-inline">共 @ViewBag.pages 条记录</div>
                                    <ul class="shop-pagi display-inline">
                                        <li><a href="/book/hot/?pages=@ViewBag.minusPage"><i class="fa fa-angle-left"></i></a></li>
                                        <li><a href="#/?pages=@ViewBag.minusPage">@ViewBag.minusPage</a></li>
                                        <li class="active"><a href="/book/hot/?pages=@ViewBag.currentPage">@ViewBag.currentPage</a></li>
                                        <li><a href="/book/hot/?pages=@ViewBag.addPage">@ViewBag.addPage</a></li>
                                        <li><a href="/book/hot/?pages=@ViewBag.addPage"><i class="fa fa-angle-right"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>