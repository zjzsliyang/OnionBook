@model OnionBookOnline.Models.BookViewModel

<!-- breadcrumb start -->
<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-home"></i> 图书</a></li>
            <li class="active">详细信息</li>
        </ol>
    </div>
</div>
<!-- breadcrumb end -->
<!-- product-details-start -->
<div class="product-details-area pt-20">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-5">
                <div class="product-zoom dotted-style-1">
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="home">
                            <div class="pro-large-img">
                                <img src="@Model.detailBook.PATH" alt="" />
                                <a class="popup-link" href="@Model.detailBook.PATH">查看更大图片 <i class="fa fa-search-plus" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-7">
                <div class="product-details">
                    <h2 class="pro-d-title">@Model.detailBook.NAME</h2>
                    <div class="pro-ref">
                        <p>
                            <label>作者： </label>
                            <span> @Model.detailBook.AUTHOR </span>
                        </p>
                        <p>
                            <label>出版社: </label>
                            <span>@Model.detailBook.PUBLISHER</span>
                        </p>
                    </div>
                    <div class="price-box">
                        <span class="price product-price">￥@{var currentPrice = Model.detailBook.DISCOUNT * Model.detailBook.PRICE;} @currentPrice</span>
                        <span class="old-price product-price"><del>￥@Model.detailBook.PRICE</del></span>
                    </div>
                    <div class="short-desc">
                        <p>@Model.detailBook.INTRODUCTION</p>
                    </div>
                    <div class="box-quantity">
                        <form action="#">
                            <label>数量</label>
                            <input type="number" value="1" />
                            <button>加入购物车</button>
                            <p>@ViewBag.Message</p>
                        </form>
                    </div>
                    <div class="usefull_link_block">
                        <ul>
                            <li><a href="#"><i class="fa fa-heart-o"></i> 收藏</a></li>
                        </ul>
                    </div>
                    <div class="share-icon">
                        <a class="wechat" href="#"><i class="fa fa-wechat"></i>  微信</a>
                        <a class="weibo" href="#"><i class="fa fa-weibo"></i>  微博</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- product-details-end -->
<!-- pro-info-area start -->
<div class="pro-info-area">
    <div class="container">
        <div class="pro-info-box">
            <!-- Nav tabs -->
            <ul class="pro-info-tab" role="tablist">
                <li class="active"><a href="#home3" data-toggle="tab">更多信息</a></li>
                <li><a href="#profile3" data-toggle="tab">基本信息</a></li>
                <li><a href="#messages3" data-toggle="tab">评价</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active" id="home3">
                    <div class="pro-desc">
                        <p>@Model.detailBook.INTRODUCTION</p>
                    </div>
                </div>
                <div class="tab-pane" id="profile3">
                    <div class="pro-desc">
                        <table class="table-data-sheet">
                            <tbody>
                                <tr class="odd">
                                    <td>作者</td>
                                    <td>@Model.detailBook.AUTHOR</td>
                                </tr>
                                <tr class="even">
                                    <td>折扣</td>
                                    <td>@Model.detailBook.DISCOUNT</td>
                                </tr>
                                <tr class="odd">
                                    <td>ISBN</td>
                                    <td>@Model.detailBook.ISBN</td>
                                </tr>
                                <tr class="even">
                                    <td>页数</td>
                                    <td>@Model.detailBook.PAGES</td>
                                </tr>
                                <tr class="odd">
                                    <td>价格</td>
                                    <td>@Model.detailBook.PRICE</td>
                                </tr>
                                <tr class="even">
                                    <td>出版社</td>
                                    <td>@Model.detailBook.PUBLISHER</td>
                                </tr>
                                <tr class="odd">
                                    <td>评分</td>
                                    <td>@Model.detailBook.SCORE</td>
                                </tr>
                                <tr class="even">
                                    <td>库存</td>
                                    <td>@Model.detailBook.STOCK</td>
                                </tr>
                                <tr class="odd">
                                    <td>销量</td>
                                    <td>@Model.detailBook.SALE</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="messages3">
                    <div class="pro-desc">
                        <a href="#">来第一个评论吧</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- pro-info-area end -->
